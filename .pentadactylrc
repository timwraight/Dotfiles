"
" ~/.pentadactylrc
"

loadplugins '\.(js|penta)$'
group user

" options """"""""""""""""""""""""""""""""""""""""""""""""""""""""""
set guioptions-=br
set guioptions+=n
set showtabline=always
set editor='emacsclient +<line>:<column> <file>'
set hlfind

noremap kj <Esc>
inoremap kj <Esc>
vnoremap kj <Esc>
cnoremap kj <Esc>

noremap b :bmarks -T

colorscheme zenburn

" hintkeys """"""""""
set hintkeys='asdfjkl;'
highlight -a Hint text-transform: uppercase;

" font options """"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
hi Normal -a font-size: 15px !important;
hi Normal -a font-family: Menlo !important;
hi StatusLine -a font-size: 15px !important;
hi StatusLine -a font-family: Menlo !important;

" custom mappings """""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
map , <Leader>
nmap -builtin <Leader>, :noh<CR>

" For autocomplete, use [s]earch engine URLs, [l]ocation matches from Firefox's
" history and bookmarks, local [f]iles, and [S]earch engine suggestions.
" set complete=bhSsfl
set complete=blSfs
set defsearch=duckduckgo