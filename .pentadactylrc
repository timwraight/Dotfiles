"
" ~/.pentadactylrc
"

loadplugins '\.(js|penta)$'
group user

" options """"""""""""""""""""""""""""""""""""""""""""""""""""""""""
set guioptions-=br
set guioptions+=n
set showtabline=always
set editor='emacsclient +<line>:<column> <file>'
set hlfind

map -builtin b :bmarks -T

colorscheme zenburn

" hintkeys """"""""""
set hintkeys='arstneio'
highlight -a Hint text-transform: uppercase;

" font options """"""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
hi Normal -a font-size: 15px !important;
hi Normal -a font-family: Menlo !important;
hi StatusLine -a font-size: 15px !important;
hi StatusLine -a font-family: Menlo !important;

" custom mappings """""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
map , <Leader>
nmap -builtin <Leader>, :noh<CR>
" Arrow keys to lalopmak versions
nmap -builtin u k
nmap -builtin e j
nmap -builtin i l
nmap -builtin n h

" O to S, as it's better for the pinky on Colemak
nmap -builtin s o
nmap -builtin ; :
nmap -builtin : ;

" tab movement
nmap -builtin <C-i> gt
nmap -builtin <C-n> gT
" jump between last selected tabs
nmap -builtin <C-r> <C-^>

" History keys, too
nmap -builtin N H
nmap -builtin I L

nmap -builtin h <Space>
nmap -builtin j <S-Space>

" Search to lalopmak version
nmap -builtin k n

" Yank to lalopmak version
nmap -builtin c y

" Undo to lalopmak version
nmap -builtin p u

" For autocomplete, use [s]earch engine URLs, [l]ocation matches from Firefox's
" history and bookmarks, local [f]iles, and [S]earch engine suggestions.
" set complete=bhSsfl
set complete=blSfs
set defsearch=duckduckgo
